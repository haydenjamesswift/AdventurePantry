<!-- Imports -->
@using AP.WebApp.Sections.Items
@using AP.WebApp.Sections.Layouts
@using Microsoft.AspNetCore.Components.Routing
@inherits LayoutComponentBase

<!-- Page Definition -->
@page "/admin"

<!-- HTML -->
<div class="admin-panel-container">

    <!-- Header -->
    <HeaderMain></HeaderMain>

    <div class="admin-panel-content-area">

        <!-- Side Bar -->
        <div class="admin-panel-side-bar">
            <div class="side-bar-title-container">
                <h1>Admin Panel</h1>
            </div>
            <div class="side-bar-content-container">
                <div class="side-bar-item">
                    <a class="side-bar-link" href="/admin/view-inventories">Inventory Manager</a>
                </div>
                <div class="side-bar-item">
                    <a class="side-bar-link" href="/admin/view-products">Product Manager</a>
                </div>
                <div class="side-bar-item">
                    <a class="side-bar-link" href="/admin/create-purchase">Purchase Orders</a>
                </div>
                <div class="side-bar-item">
                    <a class="side-bar-link" href="/admin/create-product">Production Orders</a>
                </div>
                <div class="side-bar-item">
                    <a class="side-bar-link" href="/admin/sell-product">Sales Orders</a>
                </div>
                <div class="side-bar-item">
                    <a class="side-bar-link" href="/admin/generate-inventory-reports">Inventory Reports</a>
                </div>
                <div class="side-bar-item">
                    <a class="side-bar-link" href="/admin/generate-product-reports">Product Reports</a>
                </div>
            </div>

        </div>

        <!-- Content Area -->
        <div class="admin-panel-content">
            @Body
        </div>


    </div>

</div>


